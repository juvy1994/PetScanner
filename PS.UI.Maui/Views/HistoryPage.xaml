<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PS.UI.Maui.Views.HistoryPage"
             Title="HistoryPage" Style="{StaticResource FondoColor}">

    <ScrollView x:Name="scrGeneral">

        <VerticalStackLayout Style="{StaticResource verticalL}">
            <Label  Text="Historial"
                Style="{StaticResource LblTitulo}"/>

            <Grid Style="{StaticResource gridHistorialInicial}">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label  x:Name="lblFecha"
                        Text="10/05/2025"
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource lblNormal}">
                </Label>

                <Image  Grid.Row="1"
                        Grid.Column="0"
                        Source="imgvacia.png"
                        Style="{StaticResource imgHistorial}"/>

                <Button x:Name="btnVerDetalle"
                        Text="Ver detalle"
                        Grid.Row="1"
                        Grid.Column="1"
                        Clicked="btnVerDetalle_Clicked"
                        Style="{StaticResource Botones}">
                </Button>

                <Button x:Name="btnEliminar"
                        Text="Eliminar"
                        Grid.Row="1"
                        Grid.Column="2"
                        Clicked="btnEliminar_Clicked"
                        Style="{StaticResource Botones}">
                </Button>

                <!--DETALLES OCULTOS INCIALMENTE-->

                <!--DETALLE 0-->
                <Grid   x:Name="gridDetalle0"
                        Grid.Row="2"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource gridDetalles}"
                        IsVisible="False">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label  Grid.Row="0"
                            Grid.ColumnSpan="3"
                            Text="Datos Generales"
                            Style="{StaticResource lblTituloDetalle}"/>

                    <Label  Text="Nombre raza"
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Especie"
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Origen"
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <!--CONTENIDO-->

                    <Label  x:Name="lblNombreRaza"
                            Text="Lorem Ipsum is simply dummy"
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblEspecie"
                            Text="Lorem Ipsum is simply dummy"
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblOrigen"
                            Text="Lorem Ipsum is simply dummy"
                            Grid.Row="2"
                            Grid.Column="2"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                </Grid>

                <!--DETALLE 1-->
                <Grid   x:Name="gridDetalle1"
                        Grid.Row="3"
                        Grid.ColumnSpan="3"
                        Style="{StaticResource gridDetalles}"
                        IsVisible="False">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label  Grid.Row="0"
                            Grid.ColumnSpan="4"
                            Text="Características físicas"
                            Style="{StaticResource lblTituloDetalle}"/>

                    <Label Text="Tamaño"
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Peso"
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Esperanza de vida"
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Pelaje"
                            Grid.Row="1"
                            Grid.Column="3"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <!--CONTENIDO-->

                    <Label  x:Name="lblTamanio"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblPeso"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblEsperanzaVida"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="2"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblPelaje"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="3"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                </Grid>

                <!--DETALLE2-->

                <Grid   x:Name="gridDetalle2"
                        Grid.Row="4"
                        Grid.ColumnSpan="3"
                        IsVisible="False"
                        Style="{StaticResource gridDetalles}">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label  Grid.Row="0"
                            Grid.ColumnSpan="3"
                            Text="Alimentación"
                            Style="{StaticResource lblTituloDetalle}"/>

                    <Label  Text="Recomendada"
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Porciones"
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Frecuencia"
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <!--CONTENIDO-->

                    <Label  x:Name="lblRecomendada"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblPorciones"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblFrecuencia"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="2"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                </Grid>

                <!--DETALLE 3-->

                <Grid   x:Name="gridDetalle3"
                        Grid.Row="5"
                        Grid.ColumnSpan="3"
                        IsVisible="False"
                        Style="{StaticResource gridDetalles}">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label  Grid.Row="0"
                            Grid.ColumnSpan="2"
                            Text="Cuidados especiales"
                            Style="{StaticResource lblTituloDetalle}"/>

                    <Label  Text="Ejercicio"
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Socialización"
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <!--CONTENIDO-->

                    <Label  x:Name="lblEjercicio"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblSocializacion"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                </Grid>

                <!--DETALLE 4-->
                <Grid   x:Name="gridDetalle4"
                        Grid.Row="6"
                        Grid.ColumnSpan="3"
                        IsVisible="False"
                        Style="{StaticResource gridDetalles}">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label  Grid.Row="0"
                            Grid.ColumnSpan="3"
                            Text="Enfermedades comunes"
                            Style="{StaticResource lblTituloDetalle}"/>

                    <Label  Text="Nombre"
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Descripción"
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <Label  Text="Prevención"
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource lblCabeceraDetalle}">
                    </Label>

                    <!--CONTENIDO-->

                    <Label  x:Name="lblNombreEnfermedad"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="0"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblDescripcionEnfermedad"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="1"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>

                    <Label  x:Name="lblPrevencionEnfermedad"
                            Text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                            Grid.Row="2"
                            Grid.Column="2"
                            Style="{StaticResource lblContenidoDetalle}">
                    </Label>
                </Grid>

                <Button x:Name="btnMinimizar"
                        Text="Minimizar"
                        Grid.Row="7"
                        Grid.ColumnSpan="3"
                        Clicked="btnMinimizar_Clicked"
                        IsVisible="False"
                        Style="{StaticResource btnMinimizar}">
                </Button>
            </Grid>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>