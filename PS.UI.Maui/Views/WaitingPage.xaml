<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PS.UI.Maui.Views.WaitingPage"
             Title="WaitingPage" Style="{StaticResource FondoColor}">

    <VerticalStackLayout Style="{StaticResource verticalL}">
        <Label 
            Text="Cargando ..."
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Style="{StaticResource LblTitulo}"/>
        
        <Image Grid.Row="1"
               Grid.ColumnSpan="2"
               Source="imgvacia.png"
               Style="{StaticResource imgBusqueda}"/>
        
        <ActivityIndicator IsRunning="true"
                           Style="{StaticResource RuedaGiratoria}"/>
        
        <Button x:Name="btnResult"
                Text="Ver Resultado"
                Clicked="btnResult_Clicked"
                Style="{StaticResource Botones}"/>
    </VerticalStackLayout>
    
</ContentPage>