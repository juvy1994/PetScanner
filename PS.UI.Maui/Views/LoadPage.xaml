<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PS.UI.Maui.Views.LoadPage"
             Title="Buscar" Style="{StaticResource FondoColor}">

    <ScrollView>

        <VerticalStackLayout Style="{StaticResource verticalL}">
            <Label  Text="Buscar"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                Style="{StaticResource LblTitulo}"/>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <VerticalStackLayout  
                Grid.Column="0"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Spacing="5">

                    <Label  Text="Tomar Foto"
                        Style="{StaticResource lblNormal}">
                    </Label>

                    <ImageButton x:Name="imbTomarFoto"
                            Clicked="imbTomarFoto_Clicked"
                            Source="camerami.png"
                            Style="{StaticResource imgButton}">
                    </ImageButton>

                </VerticalStackLayout>

                <VerticalStackLayout  
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Spacing="5">

                    <Label  Text="Subir imagen"
                        Style="{StaticResource lblNormal}">
                    </Label>

                    <ImageButton x:Name="imbSubirImagen"
                             Clicked="imbSubirImagen_Clicked"
                             Source="uploadmi.png"
                             Style="{StaticResource imgButton}">
                    </ImageButton>

                </VerticalStackLayout>
            </Grid>

            <Image  Source="imgvacia.png"
        Style="{StaticResource imgBusqueda}"/>

            <Button x:Name="btnSearch"
                Text="Buscar"
                Clicked="btnSearch_Clicked"
                Style="{StaticResource Botones}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>